extends layout

block content
    .container
        h2.text-center.my-4 📝 Chỉnh sửa hóa đơn

        .card.shadow-lg.p-4
            form(action="/invoice/edit/" + invoice._id, method="POST")
                .mb-3
                    label.form-label(for="quantity") 🔢 Số lượng sản phẩm
                    input.form-control(type="number", name="quantity", value=invoice.quantity, required, min="1")

                .mb-3
                    label.form-label(for="status") 🚚 Tình trạng đơn hàng
                    select.form-select(name="status", required)
                        option(value="pending", selected=invoice.status === 'pending') ⏳ Đang xử lý
                        option(value="shipped", selected=invoice.status === 'shipped') 📦 Đã giao hàng
                        option(value="cancelled", selected=invoice.status === 'cancelled') ❌ Đã hủy

                .mb-3
                    label.form-label(for="date") 📅 Ngày xuất hóa đơn
                    input.form-control(type="date", name="date", value=invoice.date.toISOString().split('T')[0], required)

                .d-flex.justify-content-center.mt-3
                    button.btn.btn-primary(type="submit") 💾 Cập nhật hóa đơn
